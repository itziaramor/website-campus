  <!-- @import "_inc/head.kit" -->

  <body class="incompany__page">

    <!-- @import "_inc/google-tag-manager-noscript.html" -->
      
    <header class="incompany__header">

      <!-- $navbarPageTitle: Formación para empresas -->
